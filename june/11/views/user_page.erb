<html>
  <head>
    <title>This is the title</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
    <style>
      .important { color: red; }
    </style>
  </head>

  <body class="container">
    <h1>Hello, <%= @name %>!</h1>

    <div class="row">
      <div class="col-sm-4 well">
        <p>You have <%= @repos.count %> repos</p>
      </div>
      <div class="col-sm-8 well">
        <p class="important">More facts</p>
      </div>
    </div>

    <table class="table table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th>Repo Name</th>
          <th>API</th>
          <th>HTML</th>
        </tr>
      </thead>

      <tbody>
        <% @repos.each do |repo| %>
          <tr>
            <td><%= repo["name"] %></td>
            <td><a href="<%= repo["url"] %>">X</a></td>
            <td><a href="<%= repo["html_url"] %>">X</a></td>
          </tr>
        <% end %>
      </tbody>

    </table>

    <ul>
      <% @friends.each do |friend| %>
        <li><a href="/user/<%= friend %>"><%= friend %></a></li>
      <% end %>
    </ul>
  </body>
</html>